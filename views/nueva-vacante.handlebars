<main class="contenedor">
    <form action="./nueva-vacante.handlebars" method="POST" class="default-form">
        <h3>Informaci√≥n General</h3>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" class="text" name="titulo" placeholder="Vacantes" required>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" class="text" name="empresa" placeholder="Empresa Contrata" required>
        </div>
        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" class="text" name="ubicacion" placeholder="Margarita" required>
        </div>
        <div class="campo">
            <label>Salario (USD)</label>
            <input type="text" class="text" name="salario" placeholder="$100 USD" required>
        </div>
        <div class="campo">
            <label>Contrato</label> 
           <select name="contrato" id="" required>
                <option value="" disabled selected>--Selecciona--</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Horas"> Por Horas</option>
                <option value="Por Proyecto">Por Proyecto</option>
           </select>
        </div>
        <h3>Descripcion del Cargo</h3>
        <div class="campo descripcion">
            <label >Descripcion</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills s}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>